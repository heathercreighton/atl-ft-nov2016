<p id="notice"><%= notice %></p>

<h1>Welcome @<%= current_user.username %></h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
    <div class="row">
    

      <tr>
        <td><%= image_tag tweet.user.avatar.url, class: "mini-pic" %> 


        <% if tweet.message.include?('#') %>

          <%= tweet.message.html_safe %></td>
        <% else %>
          <%= "#{tweet.message}" %></td>
        <% end %>
        <td><%= link_to tweet.user.username, show_user_path(id: tweet.user.id) %></td>
        <td>Created: <%= tweet.created_at.strftime("%c") %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     </div> 

    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-success' %>
