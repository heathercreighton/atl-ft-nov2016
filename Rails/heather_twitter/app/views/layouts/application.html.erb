<!DOCTYPE html>
<html>
<head>
  <title>HeatherTwitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<!-- Begin Nav Bar -->
<% if user_signed_in? %>
	<nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          
          <%= link_to "Tweets", tweets_path, class: "navbar-brand" %>
          <%= link_to "My Feed", root_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	        <ul class="nav navbar-nav navbar-left">
	        </ul>
	          
          <ul class="nav navbar-nav navbar-right">
           <li><%= link_to "Followers", followers_path(id: current_user.id) %></li>
          <li><%= link_to "All Users", all_users_path %></li>
              
            <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
           </ul>
        </div>
    	</div>
  </nav>

<% else %>
	<nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          
          <%= link_to "Tweets", tweets_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
              
            <li><%= link_to "Sign-up", new_user_registration_path %></li>
            <li><%= link_to "Forgot Password", new_user_password_path %></li>
           </ul>
        </div>
    	</div>
  </nav>


<% end %>








<div class="container">
	<%= yield %>
</div>


</body>
</html>
